extends ../layout
block content
  .row
    .col-sm-6.col-sm-offset-3
      h1 Add Record
      form(action="/new", method="post")
        .form-group
          label(for="name") Name
          input#name.form-control(type="text", name="name")
        .form-group
          label(for="url") URL
          input#url.form-control(type="text", name="url")
        button.btn.btn-default(type="submit") Add
