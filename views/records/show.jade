extends ../layout
block content
  .container
    h2=record.name
    .row
      .col-sm-2
        label URL:
      .col-sm-10
        p= record.url
    .row
      .col-sm-2
        label Duration:
      .col-sm-10
        p= record.duration
    .row
      .col-sm-2
        label Tags:
      .col-sm-10
        input#tags(type="text", data-role="tagsinput", value=tags)
    input#record(type="hidden", value=record._id)
block scripts
  script(src='/js/tags.js')
